<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorLightGray">

    <RelativeLayout
        android:id="@+id/relativeAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/burgerMenuBtn"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:background="@android:color/transparent"
            android:src="@drawable/burgermenu"
            android:scaleType="centerInside"/>

        <TextView
            android:id="@+id/textView_titleBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_activity_maps"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@+id/burgerMenuBtn"
            android:textSize="20dp"
            android:layout_centerVertical="true"/>

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/spinner_helpDropDown"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/blackdots"
            android:entries="@array/listSettingSelection">
        </android.support.v7.widget.AppCompatSpinner>

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/spinner_languageSelect"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/spinner_helpDropDown"
            android:background="@drawable/flag_icon_two"
            android:entries="@array/listLanguages">
        </android.support.v7.widget.AppCompatSpinner>

        <ImageButton
            android:id="@+id/imageBtn_filter"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_toLeftOf="@+id/spinner_languageSelect"
            android:layout_margin="10dp"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            />


    </RelativeLayout>

</android.support.v7.widget.Toolbar>