<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/account_drawerLayout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/app_bar"
            android:id="@+id/action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/account_txtViewName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/action_bar"
            android:layout_toLeftOf="@+id/account_txtViewName"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:text="@string/account_nameTxt"/>

        <TextView
            android:id="@+id/account_txtViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/action_bar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="0dp"
            android:clickable="true"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:text=""/>

        <TextView
            android:id="@+id/account_txtViewPhone2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/account_txtViewName"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:textColor="@android:color/black"
            android:text="@string/account_phoneTxt"/>

        <TextView
            android:id="@+id/account_txtViewPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/account_txtViewName"
            android:layout_toRightOf="@+id/account_txtViewPhone2"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:textColor="@android:color/black"
            android:text=""/>

        <TextView
            android:id="@+id/account_txtViewMail2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/account_txtViewPhone"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:textColor="@android:color/black"
            android:text="@string/account_mailTxt"/>

        <TextView
            android:id="@+id/account_txtViewMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/account_txtViewPhone"
            android:layout_toRightOf="@+id/account_txtViewMail2"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:textColor="@android:color/black"
            android:text=""/>

        <TextView
            android:id="@+id/account_txtViewSellingLoc"
            android:layout_below="@+id/account_txtViewMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:clickable="true"
            android:textSize="17dp"
            android:textColor="@android:color/holo_blue_dark"
            android:text="@string/account_sellingLocTxt"/>



    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/account_nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/navigation_menu_two">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:clickable="true"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/account_closeNavBar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="bottom"
                android:src="@drawable/backbtn"
                android:scaleType="fitStart"
                android:background="@android:color/transparent"/>

        </LinearLayout>
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>