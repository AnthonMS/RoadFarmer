<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/change_drawerLayout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/app_bar"
            android:id="@+id/action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_below="@+id/action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/action_bar">

                <ImageView
                    android:id="@+id/change_imageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerInside"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@android:color/darker_gray"/>

                <EditText
                    android:id="@+id/change_editRoad"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/change_imageView"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:singleLine="true"
                    android:layout_alignParentRight="true"
                    android:inputType="text"
                    android:hint="@string/create_roadHint"/>

                <EditText
                    android:id="@+id/change_editNo"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/change_imageView"
                    android:layout_below="@+id/change_editRoad"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:singleLine="true"
                    android:inputType="number"
                    android:hint="@string/create_noHint"/>

                <EditText
                    android:id="@+id/change_editZip"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/change_editNo"
                    android:layout_below="@+id/change_editRoad"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:singleLine="true"
                    android:layout_alignParentRight="true"
                    android:inputType="number"
                    android:hint="@string/create_zipHint"/>

                <EditText
                    android:id="@+id/change_editCity"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/change_imageView"
                    android:layout_below="@+id/change_editNo"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:singleLine="true"
                    android:inputType="text"
                    android:hint="@string/create_cityHint"/>


                <ImageView
                    android:id="@+id/change_itemView1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerInside"
                    android:layout_below="@+id/change_editCity"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp" />

                <ImageView
                    android:id="@+id/change_itemView2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerInside"
                    android:layout_below="@+id/change_editCity"
                    android:layout_toRightOf="@+id/change_itemView1"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp" />

                <ImageView
                    android:id="@+id/change_itemView3"
                    android:layout_width="50dip"
                    android:layout_height="50dp"
                    android:scaleType="centerInside"
                    android:layout_below="@+id/change_editCity"
                    android:layout_toRightOf="@+id/change_itemView2"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp" />

                <ImageView
                    android:id="@+id/change_itemView4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerInside"
                    android:layout_below="@+id/change_editCity"
                    android:layout_toRightOf="@+id/change_itemView3"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp" />

                <ImageView
                    android:id="@+id/change_itemView5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerInside"
                    android:layout_below="@+id/change_editCity"
                    android:layout_toRightOf="@+id/change_itemView4"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp" />

                <EditText
                    android:id="@+id/change_addCustomItems"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_below="@+id/change_itemView1"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:singleLine="true"
                    android:hint="@string/create_customItemHint"/>

                <EditText
                    android:id="@+id/change_editDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/change_addCustomItems"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:hint="@string/create_descriptionHint"
                    />

                <Button
                    android:id="@+id/change_createLocBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/change_editDescription"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="90dp"
                    android:textAllCaps="false"
                    android:textSize="20dp"
                    android:text="Update"
                    />

                <Button
                    android:id="@+id/change_deleteLocBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/change_createLocBtn"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="140dp"
                    android:layout_marginRight="140dp"
                    android:textAllCaps="false"
                    android:textSize="15dp"
                    android:text="Delete"
                    />


            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/change_nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/navigation_menu">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:clickable="true"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/change_closeNavBar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="bottom"
                android:src="@drawable/backbtn"
                android:scaleType="fitStart"
                android:background="@android:color/transparent"/>

        </LinearLayout>
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>